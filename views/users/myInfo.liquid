{% layout "layout.liquid" %} {% block content %}

<h1>Edit Your Information</h1>

<div>
    <form action="/users/{{user._id}}?_method=PUT" method="POST">
        <fieldset>
            <label class="form-control">
                FIRST NAME: <input type="text" name="firstName" value="{{user.firstName}}" required />
            </label>
            <label class="form-control">
                LAST NAME: <input type="text" name="lastName" value="{{user.lastName}}" required />
            </label>
            <!-- <label class="form-control">
                BIRTHDAY: <input type="date" max="2020-01-01" name="birthday" />
            </label> -->
            <!-- <label class="form-control">
                 TEAMS: <input type="text" name="teams" required /> 
              </label> -->
            <input class="btn btn-default" type="submit" value="Update My Info" />
        </fieldset>
    </form>
</div>


{% endblock %}