{% layout "layout.liquid" %} {% block content %}
<h1>Athletes Index Route</h1>
<a class="btn btn-default" href="/athletes/new">Add New Climber</a>
<table class="table">
    <tr class="table-secondary">
        <th>First</th>
        <th>Last</th>
        <th>Current Climbing Grade </th>
        <th>See Workouts</th>
        <th>Delete</th>
    </tr>
    {% for athlete in athletes %}
    <tr>{{fullName}}
        <td>{{ athlete.firstName }}</td>
        <td>{{ athlete.lastName }} </td>
        <td>*** Climbing Grade ***</td>
        <td><a class="btn btn-default" href="/athletes/{{ athlete._id }}">More info</a></td>
        <td>
            <form action="/athletes/{{ athlete._id }}?_method=DELETE" method="POST">
                <input class="btn btn-default" type="submit" value="X" />
            </form>
        </td>
    </tr>
    {% endfor %}
</table>
{% endblock %}