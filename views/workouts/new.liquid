{% layout 'layout.liquid' %} {% block content %}
<div class="container">
    <article>
        <form action="/athletes/{{athlete._id}}?_method=PUT" method="PUT">
            <fieldset>
                <legend>Test Your Strength!</legend>
                <label>
                    Max Finger Strength:<input type="number" name="maxFinger" placeholder="Points scored" />
                </label>
                <label>
                    Max Pull-up:<input type="number" name="maxPullup" placeholder="Points scored" />
                </label>
                <label>
                    Core:<input type="number" name="core" placeholder="Points scored" />
                </label>
                <label>
                    Endurance:<input type="number" name="endurance" placeholder="Points scored"/>
                </label>
            </fieldset>
            <input type="submit" value="Find My Climbing Grade" />
        </form>
    </article>
</div>
{% endblock %}